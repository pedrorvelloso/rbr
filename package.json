{
  "name": "rbr",
  "private": true,
  "description": "Randomizer Brasil website",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "dev": "pm2-dev ./scripts/pm2.config.js",
    "dev:msw": "pm2-dev ./scripts/pm2-msw.config.js",
    "check:types": "tsc -b",
    "check:lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "clear": "rimraf public/build \"./app/styles/**/*.css\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.6",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/vercel": "^1.7.0",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.2",
    "date-fns-tz": "^1.3.6",
    "framer-motion": "^7.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "remix-utils": "^3.3.0",
    "spin-delay": "^1.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@faker-js/faker": "^7.4.0",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/tailwindcss": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "autoprefixer": "^10.4.8",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "msw": "^0.45.0",
    "pm2": "^5.2.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "app/**/*": [
      "yarn check:lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
