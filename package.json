{
  "name": "rbr",
  "private": true,
  "description": "Randomizer Brasil website",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "yarn build:css && remix build",
    "dev": "pm2-dev ./scripts/pm2.config.js",
    "dev:msw": "pm2-dev ./scripts/pm2-msw.config.js",
    "check:types": "tsc -b",
    "check:lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "clear": "rimraf public/build \"./app/styles/**/*.css\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.1",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/vercel": "^1.4.3",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.4",
    "framer-motion": "^6.3.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-icons": "^4.3.1",
    "remix-utils": "^3.1.0",
    "spin-delay": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@faker-js/faker": "^6.3.1",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "git-cz": "^4.8.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "msw": "^0.39.2",
    "pm2": "^5.2.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "app/**/*": [
      "yarn check:lint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
